<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/identificatorLast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/for_back_white"
    android:clipToPadding="false">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/my"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameFoodLast"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_marginStart="102dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/creatorOrClientFood"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="102dp"
            android:gravity="center"
            android:background="@drawable/rounded_corners"
            android:text="creator is not founded yet"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="55dp"
            android:textSize="14sp"
            android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="start"
        android:backgroundTint="@color/mocha"
        android:elevation="15dp"
        android:layout_marginLeft="5dp"
        android:translationZ="1dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewFoodLast"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>